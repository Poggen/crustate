{
  "name": "gurka",
  "version": "0.0.1",
  "description": "",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "source": "src/index.js",
  "scripts": {
    "ava": "ava --verbose",
    "build": "rollup -c rollup.config.js",
    "clean": "rm -rf dist react/dist",
    "coverage": "nyc --reporter=html ava",
    "dist": "cross-env NODE_ENV=production npm run build",
    "distclean": "rm -rf package-lock.json node_modules dist react/dist examples/counter/dist examples/counter/node_modules examples/counter/package-lock.json",
    "flow": "flow check",
    "postinstall": "cd examples/counter && npm install",
    "test": "npm-run-all test:*",
    "test:ava": "ava --verbose",
    "test:flow": "flow status",
    "watch": "nodemon -w src -w test --exec \"npm run -q test || true\"",
    "watch-build": "rollup -c rollup.config.js -w",
    "watch-test": "nodemon -w src -w test --exec \"npm run -q ava || true\""
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@ampproject/rollup-plugin-closure-compiler": "0.8.5",
    "@babel/core": "7.4.0",
    "@babel/plugin-proposal-class-properties": "7.4.0",
    "@babel/plugin-transform-flow-strip-types": "7.4.0",
    "@babel/preset-env": "7.4.2",
    "@babel/preset-react": "7.0.0",
    "@babel/register": "7.4.0",
    "ava": "1.4.1",
    "cross-env": "5.2.0",
    "flow-bin": "0.96.0",
    "gurka": ".",
    "ninos": "2.0.2",
    "nodemon": "1.18.10",
    "npm-run-all": "4.1.5",
    "nyc": "13.3.0",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "rollup": "1.8.0",
    "rollup-plugin-alias": "1.5.1",
    "rollup-plugin-babel": "4.3.2",
    "rollup-plugin-commonjs": "9.2.3",
    "rollup-plugin-gzip": "2.2.0",
    "rollup-plugin-node-resolve": "4.0.1",
    "rollup-plugin-replace": "2.1.1",
    "rollup-watch": "4.3.1"
  },
  "ava": {
    "babel": {
      "testOptions": {
        "presets": [
          [
            "@babel/preset-react"
          ],
          [
            "@babel/preset-env",
            {
              "loose": true,
              "shippedProposals": true,
              "targets": {
                "node": "current",
                "firefox": "50",
                "ie": "11"
              },
              "exclude": [
                "transform-typeof-symbol"
              ]
            }
          ]
        ],
        "plugins": [
          [
            "@babel/plugin-transform-flow-strip-types"
          ],
          [
            "@babel/plugin-proposal-class-properties",
            {
              "loose": true
            }
          ]
        ]
      }
    },
    "files": [
      "**/*.test.js"
    ],
    "sources": [
      "**/src/**/*.js"
    ],
    "require": [
      "./test/_register"
    ],
    "powerAssert": true
  }
}
